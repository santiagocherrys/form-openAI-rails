<% content_for :title, "Forms" %>
<div>
  <h1>These are the Forms you are searched</h1>

  <div id="forms" class="mt-4">
    <% @forms.each do |form| %>
      <%= render form %>
      <p class="m-2" >
        <%= link_to "Show this form", form, class: "flex-1 ml-3 bg-white py-2 px-5 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray 50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </p>
    <% end %>
  </div>

  <p class="mt-4">
    <%= link_to "New question(form)", new_form_path, class: "flex-1 ml-3 bg-white py-2 px-5 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray 50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
  </p>
  
</div>


